[user]
	name = Robbie Ostrow
	email = ostrowr@gmail.com

[core]
	editor = emacs -nw
	excludesfile = ~/.gitignore_global

[alias]
	lg = log --oneline --graph --decorate
	ls = ls-files

[push]
	default = simple

[url "https://github.com/"]
	insteadOf = gh:

[color]
	ui = auto

[color "branch"]
       current = yellow bold
       local = green bold
       remote = cyan bold

[color "diff"]
       meta = yellow bold
       frag = magenta bold
       old = red bold
       new = green bold
       whitespace = red reverse

[color "status"]
       added = green bold
       changed = yellow bold
       untracked = red bold

[commit]
	gpgsign = false

[credential]
	helper = osxkeychain

[pack]
	windowMemory = 100m
	packSizeLimit = 100m
	threads = 1

[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f

[pull]
	rebase = false
